@model IEnumerable<RecipeApp.Models.Favorites>

@foreach(var item in Model)
{
<p>
    <a asp-controller="Favorites" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
    <a href="@Url.Action("Details","RecipeOperations",new { id = item.RecipeId })">@item.RecipeName</a>

</p>
}
<p>
    <a asp-controller="RecipeOperations" asp-action="ListAll" class="btn btn-primary">Go to the Recipe List</a>
</p>